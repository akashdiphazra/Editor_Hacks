{
    /* Windows Settings */
    "window.zoomLevel": 1,

    /* Google C/Cpp Sytle */
    // "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, UseTab: Never, IndentWidth: 4, TabWidth: 4, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 80, AccessModifierOffset: -3, AlignConsecutiveMacros: true }",

    /* Editor Settings  */
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.multiCursorModifier": "ctrlCmd",
    //"editor.suggest.insertMode": "insert",
    
    /* Cursor Settings */
    "editor.cursorBlinking": "blink",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    
    /* Themes, Icons and Fonts  Settings */
    "editor.fontLigatures": true,
    "editor.fontSize": 15.8,
    "editor.fontFamily": "'Source Code Pro Semibold', 'Courier New', monospace",
    //"editor.fontWeight": "bold",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Monokai",
    
    /* Sytax highlighting  */
    "editor.copyWithSyntaxHighlighting": false,
    
    /* Status bars and Tabs */
    "editor.suggest.showStatusBar": true,
    "workbench.editor.wrapTabs": false,
    
    /*  Terminal Settings   */
    "terminal.integrated.fontSize": 15.5,
    "terminal.integrated.fontWeightBold": "normal",
    
    "workbench.colorCustomizations": {
        // Terminal 
        "terminal.foreground": "#c5ff07",
        "terminalCursor.background": "#0c0c0b",
        "terminalCursor.foreground": "#c5ff07",
        "terminal.ansiBlack": "#886314",
        "terminal.ansiBlue": "#e0c01e",
        "terminal.ansiBrightBlack": "#886314",
        "terminal.ansiBrightBlue": "#e0c01e",
        "terminal.ansiBrightCyan": "#05fff2",
        "terminal.ansiBrightGreen": "#ad3cc4",
        "terminal.ansiBrightMagenta": "#eb9d0c",
        "terminal.ansiBrightRed": "#8168f5",
        "terminal.ansiBrightWhite": "#D2E7E4",
        "terminal.ansiBrightYellow": "#4761e6",
        "terminal.ansiCyan": "#05fff2",
        "terminal.ansiGreen": "#ad3cc4",
        "terminal.ansiMagenta": "#eb9d0c",
        "terminal.ansiRed": "#8168f5",
        "terminal.ansiWhite": "#D2E7E4",
        "terminal.ansiYellow": "#4761e6",
    
        // Title bars:-
        // "titleBar.activeForeground": "#000",
        // "titleBar.inactiveForeground": "#000000CC",
        // "titleBar.activeBackground": "#ffe600",
        // "titleBar.inactiveBackground": "#00ff15",
    
        // Status bars:-
        // "statusBar.border": "#c5ff07",
        "statusBar.background": "#8400ff",
        "statusBar.foreground": "#ffffff",
        "statusBar.debuggingBackground": "#ff0162",
        "statusBarItem.hoverBackground": "#5d4f69be",
        "statusBarItem.activeBackground": "#6562689d",
    
        // Remote Background 
        "statusBarItem.remoteBackground": "#09ff00",
        "statusBarItem.remoteForeground": "#030303",
    
        // Color Line Number 
        "editorLineNumber.foreground": "#886b1afa",
        "editorLineNumber.activeForeground": "#ffffff",
    
        // Activity bars
        // "activityBar.background": "#ff0000", 
        "activityBar.foreground": "#00c3ff",
        "activityBar.inactiveForeground": "#04779b",
        "activityBar.activeBackground": "#445357",
        "activityBarBadge.background": "#c3ff00",
        "activityBarBadge.foreground": "#000000",
    },
    "editor.tokenColorCustomizations": {
        "[Monokai]": {
            "comments": "#d41986",
        }
    },
    "files.associations": {
        "iostream": "cpp",
        "*.tcc": "cpp",
        "ostream": "cpp",
        "iomanip": "cpp"
    }
}
