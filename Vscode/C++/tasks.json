{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "g++",
            "args": [
                // Build Settings
                "-std=c++20",
                "-Wsign-conversion",
                "-Werror",
                "-Wshadow",
                "-Wall",
                "-g",
                // Program or Directory name
                "Test.cpp",
                // Extra build Settings
                "-O",
                "-O2",
                "-Wno-unused-result",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}