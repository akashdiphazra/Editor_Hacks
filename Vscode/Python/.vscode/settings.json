{
    /* Windows Settings */
    "window.zoomLevel": 1,
    "window.title": "${dirty}${activeEditorShort}${separator}$🐍{rootName}${separator}${appName}",

    /* Editor Settings  */

    /* Tab Settings */
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    /* Minimap Settings */
    //"editor.minimap.enabled": false,

    /* Indentation and Brackets Settings */
    "editor.detectIndentation": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.multiCursorModifier": "ctrlCmd",
    //"editor.suggest.insertMode": "insert",
    //"explorer.autoReveal": false,

    /* Cursor Settings */
    "editor.cursorBlinking": "blink",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,

    /* Themes, Icons and Fonts  Settings */
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontFamily": "'Source Code Pro Semibold', 'Courier New', monospace",
    //"editor.fontWeight": "bold",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Monokai",

    /* Sytax highlighting  */
    "editor.copyWithSyntaxHighlighting": false,
    "editor.bracketPairColorization.enabled": true,
    // "editor.guides.bracketPairs": "active",
    // "editor.guides.bracketPairsHorizontal": "active",
    "workbench.editor.wrapTabs": false,

    /*  Terminal Settings   */
    "terminal.integrated.tabs.title": "${process}",
    "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}",  
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.fontSize": 14.6,
    "terminal.integrated.tabs.enabled": true,

    /* Editor Configurations */
    "workbench.colorCustomizations": {

        /* Terminal */
        "terminal.foreground": "#c5ff07",
        "terminalCursor.background": "#0c0c0b",
        "terminalCursor.foreground": "#c5ff07",
        "terminal.ansiBlack": "#886314",
        "terminal.ansiBlue": "#e0c01e",
        "terminal.ansiBrightBlack": "#886314",
        "terminal.ansiBrightBlue": "#e0c01e",
        "terminal.ansiBrightCyan": "#05fff2",
        "terminal.ansiBrightGreen": "#ad3cc4",
        "terminal.ansiBrightMagenta": "#eb9d0c",
        "terminal.ansiBrightRed": "#8168f5",
        "terminal.ansiBrightWhite": "#D2E7E4",
        "terminal.ansiBrightYellow": "#4761e6",
        "terminal.ansiCyan": "#05fff2",
        "terminal.ansiGreen": "#ad3cc4",
        "terminal.ansiMagenta": "#eb9d0c",
        "terminal.ansiRed": "#8168f5",
        "terminal.ansiWhite": "#D2E7E4",
        "terminal.ansiYellow": "#4761e6",

        /* Panel Border */
        "panel.border":"#04779b",
        
        /* Title bars */
        // "titleBar.activeForeground": "#000",
        // "titleBar.inactiveForeground": "#000000CC",
        // "titleBar.activeBackground": "#ffe600",
        // "titleBar.inactiveBackground": "#00ff15",

        // Selection Background Colors
        "list.activeSelectionBackground":"#16383f",
        "list.activeSelectionForeground": "#c3ff00",
        "list.inactiveSelectionBackground": "#364346",
        "list.inactiveSelectionForeground": "#c3ff009c",
        "list.activeSelectionIconForeground":"#c3ff00",
        //"list.inactiveFocusBackground":"#ff0000",
        "list.hoverBackground": "#314f57",
        //"list.hoverForeground": "#ff0000",
    
        /* Command Pallete */
        "quickInputList.focusBackground": "#16383f",
        
        /* Status bars:- */
        // "statusBar.border": "#c5ff07",
        "statusBar.background": "#8400ff",
        "statusBar.foreground": "#ffffff",
        "statusBar.debuggingBackground": "#ff0162",
        "statusBarItem.hoverBackground": "#5d4f69be",
        "statusBarItem.activeBackground": "#6562689d",
       
        /* Tabs settings */
        "tab.activeBorder": "#00c3ff",
        "tab.hoverBackground": "#133d49c9",
        "tab.activeBackground": "#445357",
        "tab.activeForeground": "#c3ff00",
        //"tab.inactiveBackground": "#738b92",
       
        /* Remote Background */ 
        "statusBarItem.remoteBackground": "#09ff00",
        "statusBarItem.remoteForeground": "#030303",
      
        /* Color Line Number */
        "editorLineNumber.foreground": "#886b1afa",
        "editorLineNumber.activeForeground": "#ffffff",
       
        /* Activity bars */
        //"activityBar.background": "#ff0000", 
        "activityBar.foreground": "#00c3ff",
        "activityBar.inactiveForeground": "#04779b",
        "activityBar.activeBackground": "#445357",
        "activityBarBadge.background": "#c3ff00",
        "activityBarBadge.foreground": "#000000",
        "activityBar.border": "#04779b",
        "activityBar.activeBorder": "#c3ff00"    
    },
    "editor.tokenColorCustomizations": {
        "[Monokai]": {
            "comments": "#00ff6a",
            "textMateRules": [
                {
                    "scope": [
                        "string.quoted.docstring.multi.python",
                    ],
                    "settings": {
                        "foreground": "#00ff6a",
                    }
                }
            ]
        }
    },

    /* Python Language Server settings */
    "python.languageServer": "Pylance",

    /* Type Checking and Error Values of Pylance  */
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportGeneralTypeIssues": "warning",
        "reportUnboundVariable": "information",
        "reportWildcardImportFromLibrary": "warning"
    },

    /* Used to allow a user to specify a path to a directory that contains custom type stubs. Each package's */
    "python.analysis.stubPath": "typings",
    
    /* Python formatting settings */
    "python.formatting.provider": "black",
    "python.formatting.autopep8Args": [
        "--ignore",
        "E402",
        "E731"
    ]
}
